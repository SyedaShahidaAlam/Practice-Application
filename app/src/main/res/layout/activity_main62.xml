<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#22c8ff"
    android:gravity="center"
    tools:context=".MainActivity62">

    <!-- It is sign in activity -->

    <EditText
        android:id="@+id/signupNameEtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/signupEmailEtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/signupUsernameEtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/signupPasswordEtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="20sp" />

    <Button
        android:id="@+id/signupBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />


</LinearLayout>